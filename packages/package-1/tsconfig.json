{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "outDir": "build",
    "rootDir": "lib",
    "composite": true
  },
  "include": ["lib/**/*"],
  "exclude": ["build"]
}
